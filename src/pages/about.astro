---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import heroImage from "../assets/images/about/about-hero-1920x1080.jpg";
import heroImageMobile from "../assets/images/about/about-hero-mobile-800x1200.jpg";
import marvelLogo from "../assets/images/about/marvel-logo-800x322.jpg";
import starWarsLogo from "../assets/images/about/star-wars-log-694x419.jpg";
import dcLogo from "../assets/images/about/dc-logo-600x600.jpg";
import dsLogo from "../assets/images/about/ds-logo.webp";
import aboutImage from "../assets/images/about/about-554x554.jpg";
import darkHorseLogo from "../assets/images/about/dark-horse-logo.jpg";
---

<BaseLayout>
  <main>
    <section class="relative py-16 md:py-64">
      <!-- Background Image with Picture tag -->
      <div class="absolute inset-0 z-0">
        <picture>
          <!-- Mobile: Smaller image for faster loading -->
          <source
            srcset={heroImageMobile.src}
            media="(max-width: 767px)"
            type="image/webp"
          />
          <!-- Fallback: Desktop image optimized by Astro -->
          <Image
            src={heroImage}
            alt="collage of comic books"
            class="w-full h-full object-cover"
            width={1920}
            height={1080}
            loading="eager"
            fetchpriority="high"
            format="webp"
          />
        </picture>
      </div>
      <div class="site-container relative z-10">
        <div
          class="flex flex-col gap-5 md:flex-row md:items-start md:gap-x-12 lg:gap-x-20 text-white"
        >
          <div class="flex-1">
            <h1 class="font-bold">Welcome to Adventure</h1>
          </div>
          <div class="flex-1">
            <p class="md:text-md">
              At our hobby shop, we celebrate the joy of collecting action
              figures and comics. Join our vibrant community where every fan
              finds something special to ignite their passion!
            </p>
          </div>
        </div>
      </div>
    </section>

    <section class="py-12 md:py-16 lg:py-20">
      <div class="site-container">
        <p
          class="mx-auto mb-6 w-full max-w-lg text-center leading-[1.2] font-bold md:mb-8 text-l"
        >
          Carrying a wide range of action figures and comics
        </p>
        <div
          class="flex flex-wrap items-center justify-center gap-x-8 gap-y-4 pt-4 pb-2 md:pt-2"
        >
          <Image
            src={marvelLogo}
            alt="Marvel logo"
            class="max-h-12 md:max-h-14 w-auto"
            width={800}
            height={322}
            loading="lazy"
            format="webp"
          />
          <Image
            src={starWarsLogo}
            alt="star wars logo"
            class="max-h-12 md:max-h-14 w-auto"
            width={800}
            height={322}
            loading="lazy"
            format="webp"
          />
          <Image
            src={dcLogo}
            alt="dc logo"
            class="max-h-12 md:max-h-14 w-auto"
            width={800}
            height={322}
            loading="lazy"
            format="webp"
          />
          <Image
            src={dsLogo}
            alt="Demon Slayer logo"
            class="max-h-12 md:max-h-14 w-auto"
            width={800}
            height={322}
            loading="lazy"
            format="webp"
          />
          <Image
            src={darkHorseLogo}
            alt="Dark Horse logo"
            class="max-h-12 md:max-h-14 w-auto"
            width={800}
            height={322}
            loading="lazy"
            format="webp"
          />
        </div>
      </div>
    </section>
    <section class="py-16 md:py-24 lg:py-28">
      <div class="site-container">
        <div
          class="grid grid-cols-1 gap-y-12 md:grid-cols-2 md:items-center md:gap-x-12 lg:gap-x-20"
        >
          <div>
            <h2 class="mb-5 leading-[1.2] font-bold md:mb-6">
              Discover the Heart and Soul of Our Community Hobby Shop
            </h2>
            <p class="md:text-md">
              Founded in 2010, our shop has been a haven for hobbyists and
              collectors alike. Our mission is to foster a vibrant community
              through a shared passion for action figures and comics, while
              upholding values of inclusivity and creativity.
            </p>
          </div>
          <div>
            <Image
              src={aboutImage}
              alt="Legends Collectibles storefront"
              class="w-full rounded-image object-cover"
              width={554}
              height={554}
              loading="lazy"
              format="webp"
            />
          </div>
        </div>
      </div>
    </section>
    <section>
      <!-- Include this script tag or install `@tailwindplus/elements` via npm: -->

      <div class="bg-white">
        <div class="mx-auto max-w-7xl px-6 py-24 sm:py-32 lg:px-8 lg:py-40">
          <div class="mx-auto max-w-4xl grid grid-cols-1 lg:grid-cols-2 gap-6">
            <div class="lg:max-w-sm">
