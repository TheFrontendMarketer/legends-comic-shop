    <script>
      // FAQ Accordion functionality - Vanilla JavaScript
      document.addEventListener("DOMContentLoaded", () => {
        // Get all FAQ buttons
        const faqButtons = document.querySelectorAll(
          '[data-command="--toggle"]'
        );

        faqButtons.forEach((button) => {
          button.addEventListener("click", () => {
            const targetId = button.getAttribute("data-commandfor");
            const disclosure = document.getElementById(targetId);
            const icon = button.querySelector("svg");

            if (disclosure) {
              // Toggle visibility
              const isHidden = disclosure.hasAttribute("hidden");

              if (isHidden) {
                // Show the disclosure
                disclosure.removeAttribute("hidden");
                // Rotate icon to indicate open state
                if (icon) {
                  icon.style.transform = "rotate(45deg)";
                }
              } else {
                // Hide the disclosure
                disclosure.setAttribute("hidden", "");
                // Reset icon rotation
                if (icon) {
                  icon.style.transform = "rotate(0deg)";
                }
              }
            }
          });
        });
      });
    </script>
