      // FAQ Accordion functionality - Vanilla JavaScript
      document.addEventListener("DOMContentLoaded", () => {
        // Get all FAQ buttons
        const faqButtons = document.querySelectorAll(
          '[data-command="--toggle"]'
        );

        faqButtons.forEach((button) => {
          button.addEventListener("click", () => {
            const targetId = button.getAttribute("data-commandfor");
            const disclosure = document.getElementById(targetId);
            const icon = button.querySelector("svg");

            if (disclosure) {
              // Toggle visibility
              const isHidden = disclosure.hasAttribute("hidden");

              if (isHidden) {
                // Show the disclosure
                disclosure.removeAttribute("hidden");
                // Rotate icon to indicate open state
                if (icon) {
                  icon.style.transform = "rotate(45deg)";
                }
              } else {
                // Hide the disclosure
                disclosure.setAttribute("hidden", "");
                // Reset icon rotation
                if (icon) {
                  icon.style.transform = "rotate(0deg)";
                }
              }
            }
          });
        });
      });
    </script>
    <script>
      // Slider functionality
      let startX = 0;
      let currentSlide = 0;
      const totalSlides = 3;

      const slidesContainer = document.querySelector(".flex.ml-0");
      const dots = document.querySelectorAll('[aria-label^="Go to slide"]');
      const prevBtn = document
        .querySelector("button .size-6")
        ?.closest("button");
      const nextBtn = document
        .querySelectorAll("button .size-6")[1]
        ?.closest("button");

      // Arrow button functionality (desktop)
      prevBtn?.addEventListener("click", () => {
        if (currentSlide > 0) {
          currentSlide--;
          updateSlider();
        }
      });

      nextBtn?.addEventListener("click", () => {
        if (currentSlide < totalSlides - 1) {
          currentSlide++;
          updateSlider();
        }
      });

      // Touch events for swipe (mobile)
      slidesContainer?.addEventListener("touchstart", (e) => {
        startX = e.touches[0].clientX;
      });

      slidesContainer?.addEventListener("touchend", (e) => {
        const endX = e.changedTouches[0].clientX;
        const diff = startX - endX;

        if (Math.abs(diff) > 50) {
          // Minimum swipe distance
          if (diff > 0 && currentSlide < totalSlides - 1) {
            // Swipe left - next slide
            currentSlide++;
          } else if (diff < 0 && currentSlide > 0) {
            // Swipe right - previous slide
            currentSlide--;
          }
          updateSlider();
        }
      });

      // Dot click functionality (mobile)
      dots.forEach((dot, index) => {
        dot.addEventListener("click", () => {
          currentSlide = index;
          updateSlider();
        });
      });

      function updateSlider() {
        // Update slide position
        if (slidesContainer) {
          slidesContainer.style.transform = `translateX(-${currentSlide * 100}%)`;
          slidesContainer.style.transition = "transform 0.3s ease-in-out";
        }

        // Update dots (mobile)
        dots.forEach((dot, index) => {
          if (index === currentSlide) {
            // Filled dot for current slide
            dot.className =
              "relative mx-2 inline-block size-3 md:size-2 rounded-full bg-white transition-all duration-200";
          } else {
            // Empty dot for inactive slides
            dot.className =
              "relative mx-2 inline-block size-3 md:size-2 rounded-full bg-transparent border-2 border-white transition-all duration-200";
          }
        });

        // Update button states (desktop)
        if (prevBtn) {
          prevBtn.disabled = currentSlide === 0;
          prevBtn.style.opacity = currentSlide === 0 ? "0.5" : "1";
        }
        if (nextBtn) {
          nextBtn.disabled = currentSlide === totalSlides - 1;
          nextBtn.style.opacity =
            currentSlide === totalSlides - 1 ? "0.5" : "1";
        }
      }

      // Initialize slider
      updateSlider();
    </script>
