---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getPosts, urlFor } from "../lib/sanity.js";
import blogHeroImage from "../assets/images/blog-hero-1920x1080.jpg";
import contactHeroImageMobile from "../assets/images/contact/contact-hero-mobile-800x1200.jpg";
import { Image } from "astro:assets";

// Fetch blog posts from Sanity
const posts = await getPosts();
---

<BaseLayout>
  <main>
    <!-- Hero Section -->
    <section class="relative py-16 md:py-64">
      <!-- Background Image with Picture tag -->
      <div class="absolute inset-0 z-0">
        <picture>
          <!-- Mobile: Smaller image for faster loading -->
          <source
            srcset={contactHeroImageMobile.src}
            media="(max-width: 767px)"
            type="image/webp"
          />
          <!-- Fallback: Desktop image optimized by Astro -->
          <Image
            src={blogHeroImage}
            alt="collage of comic books"
            class="w-full h-full object-cover"
            width={1920}
            height={1080}
            loading="eager"
            fetchpriority="high"
            format="webp"
          />
        </picture>
      </div>

      <!-- Content -->
      <div class="site-container relative z-10">
        <div
          class="flex flex-col gap-5 md:flex-row md:items-start md:gap-x-12 lg:gap-x-20 text-white"
        >
          <div class="flex-1 text-center">
            <h1 class="text-4xl md:text-6xl font-bold">Local Legends Blog</h1>
            <p class="text-lg md:px-24">
              Stay updated with with the latest comic news, action figure
              releases, reviews, and insights from the Legends Collectibles
              team.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Blog Posts Grid -->
    <section class="py-16 md:py-24">
      <div class="site-container">
        {
          posts.length > 0 ? (
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {posts.map((post) => (
                <article class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
                  {post.mainImage && (
                    <div class="aspect-video overflow-hidden">
                      <img
                        src={urlFor(post.mainImage)
                          .width(400)
                          .height(225)
                          .url()}
                        alt={post.title}
                        class="w-full h-full object-cover"
                      />
                    </div>
                  )}
                  <div class="p-6">
                    <div class="flex items-center gap-2 mb-3">
                      {post.categories &&
                        post.categories.map((category) => (
                          <span class="bg-red-100 text-red-800 text-xs px-2 py-1 rounded-full">
                            {category.title}
                          </span>
                        ))}
                    </div>
                    <h2 class="text-xl font-bold mb-3 line-clamp-2">
                      {post.title}
                    </h2>
                    {post.excerpt ? (
                      <p class="text-gray-600 mb-4 line-clamp-3">
                        {post.excerpt}
                      </p>
                    ) : post.body && post.body.length > 0 ? (
                      <p class="text-gray-600 mb-4 line-clamp-3">
                        {post.body
                          .filter(
                            (block) => block._type === "block" && block.children
                          )
                          .map((block) =>
                            block.children
                              .filter((child) => child._type === "span")
                              .map((child) => child.text)
                              .join("")
                          )
                          .join(" ")
                          .substring(0, 150)}
                        ...
                      </p>
                    ) : null}
                    <div class="flex items-center justify-between">
                      <div class="flex items-center gap-3">
                        {post.author?.image && (
                          <img
                            src={urlFor(post.author.image)
                              .width(40)
                              .height(40)
                              .url()}
                            alt={post.author.name}
                            class="w-10 h-10 rounded-full object-cover"
                          />
                        )}
                        <div>
                          <p class="text-sm font-semibold">
                            {post.author?.name}
                          </p>
                          <p class="text-xs text-gray-500">
                            {new Date(post.publishedAt).toLocaleDateString()}
                          </p>
                        </div>
                      </div>
                      <a
                        href={`/blog/${post.slug.current}`}
                        class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-colors"
                      >
                        Read More
                      </a>
                    </div>
                  </div>
                </article>
              ))}
            </div>
          ) : (
            <div class="text-center py-16">
              <h2 class="text-2xl font-bold mb-4">No blog posts yet</h2>
              <p class="text-gray-600">
                Check back soon for comic news and updates!
              </p>
            </div>
          )
        }
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
