---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import contactHeroImage from "../assets/images/contact/contact-hero-1920x1080.jpg";
import contactHeroImageMobile from "../assets/images/contact/contact-hero-mobile-800x1200.jpg";
import formImage from "../assets/images/contact/form-image-554x554.jpg";
---

<BaseLayout>
  <main>
    <section class="relative py-16 md:py-64">
      <!-- Background Image with Picture tag -->
      <div class="absolute inset-0 z-0">
        <picture>
          <!-- Mobile: Smaller image for faster loading -->
          <source
            srcset={contactHeroImageMobile.src}
            media="(max-width: 767px)"
            type="image/webp"
          />
          <!-- Fallback: Desktop image optimized by Astro -->
          <Image
            src={contactHeroImage}
            alt="Legends Collectibles - Your destination for rare comics and collectibles"
            class="w-full h-full object-cover"
            width={1920}
            height={1080}
            loading="eager"
            fetchpriority="high"
            format="webp"
          />
        </picture>
      </div>

      <!-- Content -->
      <div class="site-container relative z-10">
        <div
          class="flex flex-col gap-5 md:flex-row md:items-start md:gap-x-12 lg:gap-x-20 text-white"
        >
          <div class="flex-1">
            <h1 class="font-bold">Contact Us</h1>
          </div>
        </div>
      </div>
    </section>

    <section class="py-16 md:py-24 lg:py-28 bg-[#060704] text-white">
      <div class="site-container">
        <div>
          <div
            class="mb-12 flex flex-col gap-12 md:mb-20 md:flex-row md:gap-20"
          >
            <div class="rb-12 max-w-lg flex-1">
              <p class="mb-3 font-semibold md:mb-4">Connect</p>
              <h2 class="mb-5 font-bold md:mb-6">Get in Touch</h2>
              <p class="md:text-md">
                We’re here to help you with any questions or concerns you may
                have!
              </p>
            </div>
            <div class="flex flex-col md:flex-[0.75]">
              <div class="flex flex-col gap-6 py-2">
                <div class="flex flex-row">
                  <div class="mr-4 md:mb-4">
                    <svg
                      stroke="currentColor"
                      fill="currentColor"
                      stroke-width="0"
                      viewBox="0 0 24 24"
                      class="size-6"
                      height="1em"
                      width="1em"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        d="M20 4H4c-1.103 0-2 .897-2 2v12c0 1.103.897 2 2 2h16c1.103 0 2-.897 2-2V6c0-1.103-.897-2-2-2zm0 2v.511l-8 6.223-8-6.222V6h16zM4 18V9.044l7.386 5.745a.994.994 0 0 0 1.228 0L20 9.044 20.002 18H4z"
                      ></path>
                    </svg>
                  </div>
                  <div>
                    <p class="mb-2 text-md leading-[1.4] font-bold md:text-xl">
                      Email
                    </p>
                    <a class="underline" href="#">hello@legends.com</a>
                  </div>
                </div>
                <div class="flex flex-row">
                  <div class="mr-4 md:mb-4">
                    <svg
                      stroke="currentColor"
                      fill="currentColor"
                      stroke-width="0"
                      viewBox="0 0 24 24"
                      class="size-6"
                      height="1em"
                      width="1em"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        d="M17.707 12.293a.999.999 0 0 0-1.414 0l-1.594 1.594c-.739-.22-2.118-.72-2.992-1.594s-1.374-2.253-1.594-2.992l1.594-1.594a.999.999 0 0 0 0-1.414l-4-4a.999.999 0 0 0-1.414 0L3.581 5.005c-.38.38-.594.902-.586 1.435.023 1.424.4 6.37 4.298 10.268s8.844 4.274 10.269 4.298h.028c.528 0 1.027-.208 1.405-.586l2.712-2.712a.999.999 0 0 0 0-1.414l-4-4.001zm-.127 6.712c-1.248-.021-5.518-.356-8.873-3.712-3.366-3.366-3.692-7.651-3.712-8.874L7 4.414 9.586 7 8.293 8.293a1 1 0 0 0-.272.912c.024.115.611 2.842 2.271 4.502s4.387 2.247 4.502 2.271a.991.991 0 0 0 .912-.271L17 14.414 19.586 17l-2.006 2.005z"
                      ></path>
                    </svg>
                  </div>
                  <div>
                    <p class="mb-2 text-md leading-[1.4] font-bold md:text-xl">
                      Phone
                    </p>
                    <a class="underline" href="#">+1 (555) 123-4567</a>
                  </div>
                </div>
                <div class="flex flex-row">
                  <div class="mr-4 md:mb-4">
                    <svg
                      stroke="currentColor"
                      fill="currentColor"
                      stroke-width="0"
                      viewBox="0 0 24 24"
                      class="size-6"
                      height="1em"
                      width="1em"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        d="M12 14c2.206 0 4-1.794 4-4s-1.794-4-4-4-4 1.794-4 4 1.794 4 4 4zm0-6c1.103 0 2 .897 2 2s-.897 2-2 2-2-.897-2-2 .897-2 2-2z"
                      ></path>
                      <path
                        d="M11.42 21.814a.998.998 0 0 0 1.16 0C12.884 21.599 20.029 16.44 20 10c0-4.411-3.589-8-8-8S4 5.589 4 9.995c-.029 6.445 7.116 11.604 7.42 11.819zM12 4c3.309 0 6 2.691 6 6.005.021 4.438-4.388 8.423-6 9.73-1.611-1.308-6.021-5.294-6-9.735 0-3.309 2.691-6 6-6z"
                      ></path>
                    </svg>
                  </div>
                  <div>
                    <p class="mb-2 text-md leading-[1.4] font-bold md:text-xl">
                      Store Location
                    </p>
                    <p>456 Hobby Lane, New Hope, PA 18938 USA</p>
                  </div>
                </div><div class="flex flex-row">
                  <div class="mr-4 md:mb-4">
                    <svg
                      stroke="currentColor"
                      fill="currentColor"
                      stroke-width="0"
                      viewBox="0 0 24 24"
                      class="size-6"
                      height="1em"
                      width="1em"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        d="M12 2C6.486 2 2 6.486 2 12s4.486 10 10 10 10-4.486 10-10S17.514 2 12 2zm0 18c-4.411 0-8-3.589-8-8s3.589-8 8-8 8 3.589 8 8-3.589 8-8 8z"
                      ></path>
                      <path
                        d="M13 7h-2v5.414l3.293 3.293 1.414-1.414L13 11.586z"
                      ></path>
                    </svg>
                  </div>
                  <div>
                    <p class="mb-2 text-md leading-[1.4] font-bold md:text-xl">
                      Store Hours
                    </p>
                    <p>Mon & Tues Closed</p>
                    <p>Wed 12pm–6pm</p>
                    <p>Thurs 12pm–6pm</p>
                    <p>Fri & Sat 12pm–8pm</p>
                    <p>Sun 12pm–5pm</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <a href="#" class="justify-self-end md:w-[321.6px] lg:w-auto"
          ><img
            src="https://relume-assets.s3.us-east-1.amazonaws.com/placeholder-map-image.svg"
            alt="Relume placeholder map image"
            class="size-full h-[400px] object-cover md:h-[516px] rounded-2xl"
          /></a
        >
      </div>
    </section>

    <section class="py-16 md:py-24 lg:py-28">
      <div class="site-container flex flex-col md:flex-row md:gap-12 lg:gap-20">
        <div class="flex flex-col flex-1">
          <div class="mb-8 w-full max-w-lg md:mb-10 lg:mb-12">
            <p class="mb-3 font-semibold md:mb-4">Connect</p>
            <h2
              class="rb-5 mb-5 text-5xl font-bold md:mb-6 md:text-7xl lg:text-8xl"
            >
              Get in Touch
            </h2>
            <p class="md:text-md">We&#x27;d love to hear from you!</p>
          </div>
          <form class="grid w-full max-w-md grid-cols-1 gap-6">
            <div class="grid w-full items-center">
              <label
                class="peer-disabled:cursor-not-allowed peer-disabled:opacity-70 mb-2"
                for="name">Name</label
              >
              <div class="relative flex w-full items-center">
                <input
                  type="text"
                  class="rounded-input flex size-full py-2 align-middle transition-all duration-200 file:border-0 file:bg-transparent file:text-sm file:font-medium focus-visible:outline-none disabled:cursor-not-allowed disabled:opacity-50 border border-border-primary bg-background-primary min-h-11 px-3"
                  id="name"
                />
              </div>
            </div>
            <div class="grid w-full items-center">
              <label
                class="peer-disabled:cursor-not-allowed peer-disabled:opacity-70 mb-2"
                for="email">Email</label
              >
              <div class="relative flex w-full items-center">
                <input
                  type="email"
                  class="rounded-input flex size-full py-2 align-middle transition-all duration-200 file:border-0 file:bg-transparent file:text-sm file:font-medium focus-visible:outline-none disabled:cursor-not-allowed disabled:opacity-50 border border-border-primary bg-background-primary min-h-11 px-3"
                  id="email"
                />
              </div>
            </div>
            <div class="grid w-full items-center">
              <label
                class="peer-disabled:cursor-not-allowed peer-disabled:opacity-70 mb-2"
                for="message">Message</label
              ><textarea
                class="flex w-full border border-border-primary bg-neutral-white p-3 placeholder:text-neutral focus-visible:outline-none disabled:cursor-not-allowed disabled:opacity-50 min-h-[11.25rem] overflow-auto"
                id="message"
                placeholder="Type your message..."></textarea>
            </div>

            <div>
              <button
                class="rounded-button inline-flex gap-3 items-center justify-center whitespace-nowrap transition-all duration-200 ease-in-out disabled:pointer-events-none disabled:opacity-50 focus-visible:outline-none border border-border-primary bg-background-alternative text-text-alternative px-6 py-3"
                title="Submit"
              >
                Submit
              </button>
            </div>
          </form>
        </div>
        <div class="mt-8 md:mt-0 flex-shrink-0">
          <Image
            src={formImage}
            alt="Action figures and comics collection"
            class="w-full rounded-image object-cover rounded-2xl"
            width={554}
            height={554}
            loading="lazy"
            format="webp"
          />
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
